auto br0
iface br0 inet static
        address 10.1.192.{{ ansible_hostname | regex_replace('[^0-9]', '') }}/20
        # non-existance only gives warning
        bridge_ports bat0
        bridge_stp no
        post-up ip route add 10.1.192.0/20 dev $IFACE table 42
        post-up /etc/init.d/isc-dhcp-server status; if [ "$?" -eq 3 ]; then /etc/init.d/isc-dhcp-server start;fi

iface br0 inet6 static
        address fdd9:a0b1:5bd0::{{ ansible_hostname | regex_replace('[^0-9]', '') }}/51
        post-up ip -6 route add fdd9:a0b1:5bd0::/51 dev $IFACE table 42

auto tun-ffrl-uplink
iface tun-ffrl-uplink inet static
        address {{ grePublicIP[ansible_hostname].ip4 }}/32
        pre-up ip link add $IFACE type dummy
